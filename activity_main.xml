<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="4"
    android:padding="@dimen/gridPad"

    android:background="@color/secondaryColorScheme"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_enterBillAmnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:padding="@dimen/padding_textView_default"
        android:textAlignment="center"
        android:textColor="@color/secondaryColorScheme"
        />

    <TextView
        android:id="@+id/tv_enterBillTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:background="@color/primaryColorScheme"
        android:text="@string/editTextString"
        android:textSize="@dimen/etTextSize"
        android:textColor="@color/secondaryColorScheme"
        android:textAlignment="center"
        android:padding="@dimen/padding_textView_default" />

    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/tvPercentString"
        android:textSize="@dimen/genTextSize"
        android:textColor="@color/primaryColorScheme"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_column="1"
        android:progress="@integer/progress"
        android:min="0"
        android:max="100"
        />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/tvTipString"
        android:textSize="@dimen/genTextSize"
        android:textColor="@color/primaryColorScheme"
        />

    <TextView
        android:id="@+id/tv_tipAmount"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:background="@color/primaryColorScheme"
        android:text="@string/tvTipAmntString"
        android:textSize="@dimen/genTextSize"
        android:textColor="@color/secondaryColorScheme"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/tv_total"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/tvTotalString"
        android:textSize="@dimen/genTextSize"
        android:textColor="@color/primaryColorScheme"
        />

    <TextView
        android:id="@+id/tv_totalAmount"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:background="@color/primaryColorScheme"
        android:text="@string/tvTipAmntString"
        android:textSize="@dimen/genTextSize"
        android:textColor="@color/secondaryColorScheme"
        android:textAlignment="center"
        />



</GridLayout>
